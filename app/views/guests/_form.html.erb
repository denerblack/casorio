<%= form_for @guest, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :companions_amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :companions_amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :confirmed, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :confirmed, :class => 'checkbox' %>
    </div>
  </div>
  <a href="#guestsModal" role="button" class="btn" data-toggle="modal">Inserir Convidados</a>
  <%= render :partial => 'modal' %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                guests_path, :class => 'btn' %>
  </div>
<% end %>
