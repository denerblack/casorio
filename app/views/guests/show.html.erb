<%- model_class = Guest -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
							<p id="notice"><%= notice %></p>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @guest.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:companions_amount) %>:</strong></dt>
  <dd><%= @guest.companions_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:confirmed) %>:</strong></dt>
  <dd><%= @guest.confirmed %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              guests_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_guest_path(@guest), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              guest_path(@guest),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
